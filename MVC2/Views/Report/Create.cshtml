@model MVC2.Models.Reports

@{
    ViewData["Title"] = "CreateReport";
}

<h1 style="color:Green; background-color:lightgray; border-color:black;">Scout Report</h1>
<div style="background-color:lightgreen"   class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="PlayerName" class="control-label"></label>
                <input asp-for="PlayerName" class="form-control" />
                <span asp-validation-for="PlayerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sport" class="control-label"></label>
                <input asp-for="Sport" class="form-control" />
                <span asp-validation-for="Sport" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScoutReport" class="control-label"></label>
                <input asp-for="ScoutReport" class="form-control" />
                <span asp-validation-for="ScoutReport" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



<div>
    <a asp-action="Index" asp-controller="Player" > Back to Tracker</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
